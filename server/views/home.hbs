<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>EagleTRT - Ermes</title>
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link rel="stylesheet" href="/public/home.css" />
    <link rel=icon href="/public/favicon.ico">
    <script src="/public/clipboard.min.js"></script>
</head>

<body>
    <div id="content">
        <header>
            <!-- LOGO -->
            <img src="/public/logo.png" alt="logo" class="logo clock">
             <!-- TITLE -->
            <div id="title-container">
                <h1 id="title">ET (Eagle Telemetria)</h1>
                <h2 id="subtitle">Telefono Casa</h2>
            </div>
             <!-- ENGLISH LOGO -->
            <img src="/public/logo.png" alt="logo" class="logo english-clock">
        </header>

        <div id="copyarea">
            <!-- LOCAL IP -->
            <div class="item local-ip">
                <span class="title">Local IP</span>
                <span class="value" id="local-ip">{{localIp}}</span>
                <span class="copy">
                    <img src="/public/copy.svg" alt="copy" class="clipboardjs" data-clipboard-target="#local-ip" />
                </span>
            </div>

            <!-- PUBLIC IP -->
            <div class="item public-ip">
                <span class="title">Public IP</span>
                <span class="value" id="public-ip">{{publicIp}}</span>
                <span class="copy">
                    <img src="/public/copy.svg" alt="copy" class="clipboardjs" data-clipboard-target="#public-ip" />
                </span>
            </div>

            <!-- USER -->
            <div class="item user">
                <span class="title">User</span>
                <span class="value" id="user">{{user}}</span>
                <span class="copy">
                    <img src="/public/copy.svg" alt="copy" class="clipboardjs" data-clipboard-target="#user" />
                </span>
            </div>

            <!-- ZEROTIER ID -->
            <div class="item zerotier-id">
                <span class="title">Zerotier Id</span>
                <span class="value" id="zerotier-id">{{zerotierId}}</span>
                <span class="copy">
                    <img src="/public/copy.svg" alt="copy" class="clipboardjs" data-clipboard-target="#zerotier-id" />
                </span>
            </div>

            <!-- ZEROTIER IP -->
            <div class="item zerotier-ip">
                <span class="title">Zerotier Ip</span>
                <span class="value" id="zerotier-ip">{{zerotierIp}}</span>
                <span class="copy">
                    <img src="/public/copy.svg" alt="copy" class="clipboardjs" data-clipboard-target="#zerotier-ip" />
                </span>
            </div>

            <!-- ZEROTIER JOIN -->
            <div class="item zerotier-join">
                <span class="title">Zerotier Join</span>
                <span class="value" id="zerotier-join">{{zerotierJoin}}</span>
                <span class="copy">
                    <img src="/public/copy.svg" alt="copy" class="clipboardjs" data-clipboard-target="#zerotier-join" />
                </span>
            </div>

            <!-- ZEROTIER SSH -->
            <div class="item zerotier-ssh">
                <span class="title">Zerotier SSH</span>
                <span class="value" id="zerotier-ssh">{{zerotierSsh}}</span>
                <span class="copy">
                    <img src="/public/copy.svg" alt="copy" class="clipboardjs" data-clipboard-target="#zerotier-ssh" />
                </span>
            </div>

            <!-- NGROK URL -->
            <div class="item ngrok-url">
                <span class="title">Ngrok Url</span>
                <span class="value" id="ngrok-url">{{ngrokUrl}}</span>
                <span class="copy">
                    <img src="/public/copy.svg" alt="copy" class="clipboardjs" data-clipboard-target="#ngrok-url" />
                </span>
            </div>

            <!-- HOSTNAME -->
            <div class="item ngrok-hostname">
                <span class="title">Ngrok Host</span>
                <span class="value" id="ngrok-hostname">{{ngrokHostname}}</span>
                <span class="copy">
                    <img src="/public/copy.svg" alt="copy" class="clipboardjs"
                        data-clipboard-target="#ngrok-hostname" />
                </span>
            </div>

            <!-- PORT -->
            <div class="item ngrok-port">
                <span class="title">Ngrok Port</span>
                <span class="value" id="ngrok-port">{{ngrokPort}}</span>
                <span class="copy">
                    <img src="/public/copy.svg" alt="copy" class="clipboardjs" data-clipboard-target="#ngrok-port" />
                </span>
            </div>

            <!-- SSH -->
            <div class="item ngrok-ssh">
                <span class="title">Ngrok SSH</span>
                <span class="value" id="ngrok-ssh">{{ngrokSsh}}</span>
                <span class="copy">
                    <img src="/public/copy.svg" alt="copy" class="clipboardjs" data-clipboard-target="#ngrok-ssh" />
                </span>
            </div>

            <!-- LAST UPDATE -->
            <div class="item last-update">
                <span id="last-update">Last updated on {{date}}</span>
            </div>
        </div>
    </div>

    <script src="/public/home.js"></script>
</body>

</html>